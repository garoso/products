<div class="container">
  <div class="row">
    <div class="col-sm-4 offset-sm-4">
      <h1><%= form_title %></h1>
      <%=  form_for @product do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre del producto" %>
      </div>
      <div class="form-group">
        <%= f.number_field :price, class: "form-control input-lg", placeholder: "Ingresa el precio del producto" %>
      </div>
      <div class="form-group">
        <%= f.collection_check_boxes :category_ids, @categories, :id, :name do |category|%>
        <div>
          <%= category.check_box %> <%= category.label %>
        </div>
        <% end %>
      </div>
      <div class="">
        <%= f.submit form_title, class: "btn btn-dark btn-lg btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
